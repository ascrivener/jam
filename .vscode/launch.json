{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Optimized State Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/src/go/pkg/state",
            "preLaunchTask": "Run Optimized State Tests",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "name": "Run State Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/src/go/pkg/state",
            "args": [
                "-test.run=TestStateDeserializerWithTransition",
                "-test.v"
            ],
            "buildFlags": "-gcflags=all=-B",
            "showLog": true
        },
        {
            "name": "Debug Accumulation Tests (With Size Selection)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/src/go/pkg/state",
            "args": [
                "-test.run",
                "TestStateTransitionAccumulation",
                "-test.v"
            ],
            "env": {
                "JAM_TEST_VECTOR_DIR": "${input:testSize}"
            },
            "showLog": true,
            "preLaunchTask": "select-constants-generator"
        },
        {
            "name": "Debug Assurances Tests (With Size Selection)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/src/go/pkg/state",
            "args": [
                "-test.run",
                "TestStateTransitionAssurances",
                "-test.v"
            ],
            "env": {
                "JAM_TEST_VECTOR_DIR": "${input:testSize}"
            },
            "showLog": true,
            "preLaunchTask": "select-constants-generator"
        },
        {
            "name": "Debug Current Test (With Size Selection)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": [
                "-test.run",
                "${fileBasenameNoExtension}",
                "-test.v"
            ],
            "env": {
                "JAM_TEST_VECTOR_DIR": "${input:testSize}"
            },
            "showLog": true,
            "preLaunchTask": "select-constants-generator"
        },
        {
            "name": "Test individual test vector",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/src/go/pkg/pvm",
            "args": [
                "-test.v",
                "-test.run=TestPVMWithDirectoryTestVectors/inst_load_i16"
            ],
            "showLog": true
        },
        {
            "name": "JAM Client - Alice (Testnet)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/go/cmd/polkajam-client/main.go",
            "args": [
                "-chain-hash",
                "0259fbe9",
                "-address",
                "localhost:40005",
                "-insecure",
                "-use-alice",
                "-mode",
                "listen"
            ],
            "env": {},
            "showLog": true
        },
        {
            "name": "JAM Client (Alice)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/go/cmd/polkajam-client/main.go",
            "args": [
                "-chain-hash",
                "0259fbe9",
                "-address",
                "localhost:40005",
                "-insecure",
                "-use-alice",
                "-mode",
                "listen"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "JAM Client (Listen Mode)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/go/cmd/polkajam-client/main.go",
            "args": [
                "-chain-hash",
                "0259fbe9",
                "-address",
                "localhost:40005",
                "-insecure",
                "-mode",
                "listen"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "JAM Client (State Request)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/go/cmd/polkajam-client/main.go",
            "args": [
                "-chain-hash",
                "0259fbe9",
                "-address",
                "localhost:40005",
                "-insecure",
                "-mode",
                "state",
                "-state-hash",
                "${input:stateHash}"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug log_compare",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/go/pkg/tools/log_compare.go",
            "args": [
                "${workspaceFolder}/src/go/pkg/state/test2.txt",
                "${workspaceFolder}/src/go/pkg/state/pvm_execution.log"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Jamzilla",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/go/cmd/jamzilla/main.go",
            "args": [
                "--config-path",
                "${workspaceFolder}/dev-spec.json",
                "--dev-validator",
                "0",
                "--data-path",
                "/tmp/jam-debug"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Fuzzclient (In-Process)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/go/cmd/fuzzer/fuzzclient/main.go",
            "args": [
                "--in-process",
                "--vectors",
                "${workspaceFolder}/jam-conformance/fuzz-reports/jamzilla/jam-node-0.1.0_gp-0.6.7/1755082451"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "showLog": true,
            "env": {
                "GODEBUG": "gctrace=1"
            }
        },
        {
            "name": "JAM Fuzzserver",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/go/cmd/fuzzer/fuzzserver",
            "args": [
                "--socket",
                "/tmp/jam_target.sock"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "showLog": true
        }
    ],
    "inputs": [
        {
            "id": "testSize",
            "type": "pickString",
            "description": "Choose test size (tiny=test constants, full=prod constants)",
            "options": [
                "tiny",
                "full"
            ],
            "default": "tiny"
        },
        {
            "id": "stateHash",
            "type": "promptString",
            "description": "Enter the state hash (64 hex characters)"
        }
    ]
}