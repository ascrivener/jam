{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Accumulation Tests (With Size Selection)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/go/state",
            "args": [
                "-test.run",
                "TestStateTransitionAccumulation",
                "-test.v"
            ],
            "env": {
                "JAM_TEST_VECTOR_DIR": "${input:testSize}"
            },
            "showLog": true,
            "preLaunchTask": "select-constants-generator"
        },
        {
            "name": "Debug Assurances Tests (With Size Selection)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/go/state",
            "args": [
                "-test.run",
                "TestStateTransitionAssurances",
                "-test.v"
            ],
            "env": {
                "JAM_TEST_VECTOR_DIR": "${input:testSize}"
            },
            "showLog": true,
            "preLaunchTask": "select-constants-generator"
        },
        {
            "name": "Debug Current Test (With Size Selection)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": [
                "-test.run",
                "${fileBasenameNoExtension}",
                "-test.v"
            ],
            "env": {
                "JAM_TEST_VECTOR_DIR": "${input:testSize}"
            },
            "showLog": true,
            "preLaunchTask": "select-constants-generator"
        },
        {
            "name": "Test individual test vector",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/go/pvm",
            "args": [
                "-test.v",
                "-test.run=TestPVMWithDirectoryTestVectors/inst_load_i16"
            ],
            "showLog": true
        }
    ],
    "inputs": [
        {
            "id": "testSize",
            "type": "pickString",
            "description": "Choose test size (tiny=test constants, full=prod constants)",
            "options": [
                "tiny",
                "full"
            ],
            "default": "tiny"
        }
    ]
}